<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:titleTextColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextAppearance="@style/ToolbarTitleText"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        tools:ignore="MissingConstraints"/>

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/poco"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintVertical_bias="0.07"/>

    <TextView
        android:id="@+id/detail_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Brand"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/detail_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.35" />
    <TextView
        android:id="@+id/Deskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Sejarah"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        app:layout_goneMarginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/smartphone_Pertama"
        tools:ignore="MissingConstraints" />
    <TextView
        android:text="Ini adalalah deskripsi Brandnya nanti"
        android:id="@+id/detail_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/Deskripsi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tahun_Dibuat"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Tahun dibuat : "
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/detail_heading"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/year_created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ini adalah isi teksnya nanti"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/detail_heading"
        app:layout_constraintBottom_toBottomOf="@+id/nama_pembuat"
        app:layout_constraintStart_toEndOf="@+id/tahun_Dibuat"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/nama_pembuat"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Nama Penemu : "
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tahun_Dibuat"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/developer_name"
        android:text="ini adalah isi teksnya nanti"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="@+id/year_created"
        app:layout_constraintBottom_toBottomOf="@+id/smartphone_Pertama"
        app:layout_constraintStart_toEndOf="@+id/nama_pembuat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/smartphone_Pertama"
        android:text="Smartphone pertama : "
        app:layout_constraintTop_toTopOf="@+id/nama_pembuat"
        android:layout_width="wrap_content"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/first_smartphone"
        android:text="ini adalah isi teksnya nanti"
        android:textColor="@android:color/black"
        app:layout_constraintHorizontal_bias="1.0"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/developer_name"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/smartphone_Pertama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
